---
let grenadeThreads = new Array(8).fill("");
---

<section>
  <div class="grenade-container">
    <div class="grenade-top">
      <div></div>
      <div></div>
      <div></div>
    </div>
    {
      grenadeThreads.map(() => (
        <div class="grenade-thread">
          <div />
          <div />
          <div />
        </div>
      ))
    }
    <div class="grenade-bot">
      <div></div>
      <div></div>
      <div></div>
    </div>
  </div>
</section>

<style>
  section {
    --chrome: linear-gradient(
      90deg,
      rgb(131, 127, 122) 0%,
      rgb(151, 145, 139) 6%,
      rgba(43, 37, 28, 1) 11%,
      rgba(47, 42, 36, 1) 16%,
      rgba(109, 95, 84, 1) 24%,
      rgba(235, 235, 231, 1) 35%,
      rgba(227, 227, 223, 1) 43%,
      rgba(97, 90, 88, 1) 52%,
      rgb(32, 32, 31) 66%,
      rgba(73, 68, 62, 1) 80%,
      rgba(176, 172, 166, 1) 85%,
      rgba(97, 95, 91, 1) 96%,
      rgba(45, 44, 43, 1) 100%
    );

    --black: linear-gradient(
      90deg,
      rgba(66, 65, 63, 1) 0%,
      rgba(24, 20, 17, 1) 8%,
      rgba(13, 9, 6, 1) 15%,
      rgba(13, 9, 6, 1) 31%,
      rgba(42, 39, 38, 1) 49%,
      rgba(13, 9, 6, 1) 67%,
      rgba(13, 9, 6, 1) 86%,
      rgba(45, 44, 43, 1) 100%
    );

    height: 31.07%;
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
  }

  .grenade-container {
    width: 67.92%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .grenade-container::before {
    content: "";
    position: absolute;
    inset: 0;
    width: 80%;
    left: 50%;
    translate: -50%;
    background: var(--black);
  }

  .grenade-top {
    height: 12%;
    width: 100%;
    z-index: 1;
  }

  .grenade-top > div:nth-child(1) {
    height: 47.89%;
    background: var(--black);
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0 100%);
  }

  .grenade-top > div:nth-child(2) {
    height: 28.74%;
    background: var(--chrome);
  }

  .grenade-top > div:nth-child(3) {
    height: 23.37%;
    background: rgb(10, 10, 10);
    clip-path: polygon(0 0, 100% 0, 90% 100%, 10% 100%);
  }

  .grenade-thread {
    width: 100%;
    height: 9.06%;
    z-index: 1;
  }

  .grenade-thread > div:nth-child(2n + 1) {
    height: 30.96%;
    background: var(--black);
  }

  .grenade-thread > div:nth-child(1) {
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0 100%);
  }

  .grenade-thread > div:nth-child(2) {
    height: 38.07%;
    background: var(--chrome);
  }

  .grenade-thread > div:nth-child(3) {
    clip-path: polygon(0 0, 100% 0, 90% 100%, 10% 100%);
    background: rgb(10, 10, 10);
  }

  .grenade-bot {
    height: 15.45%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
  }

  .grenade-bot > div:nth-child(1) {
    height: 18.15%;
    width: 100%;
    background: var(--black);
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0 100%);
  }

  .grenade-bot > div:nth-child(2) {
    height: 52.08%;
    width: 100%;
    background: var(--chrome);
    position: relative;
  }

  .grenade-bot > div:nth-child(2)::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(13, 9, 6, 0.3) 0%,
      rgba(17, 14, 11, 0.6) 23%,
      rgba(21, 19, 16, 0.2) 44%,
      rgba(27, 26, 23, 0.5) 59%,
      rgba(24, 23, 23, 0.6) 62%,
      rgb(17, 17, 17) 100%
    );
  }

  .grenade-bot > div:nth-child(3) {
    height: 29.76%;
    width: 100%;
    width: 105.56%;
    background: var(--chrome);
    position: relative;
  }

  .grenade-bot > div:nth-child(3)::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(13, 9, 6, 0) 0%,
      rgba(24, 23, 23, 0) 75%,
      rgba(24, 23, 23, 0.5) 85%,
      rgba(17, 17, 17, 0.5) 100%
    );
  }
</style>
