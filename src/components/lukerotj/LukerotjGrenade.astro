---
let grenadeThreads = new Array(8).fill("");
---

<section>
  <div class="grenade-container">
    <div class="grenade-top">
      <div></div>
      <div></div>
      <div></div>
    </div>
    {
      grenadeThreads.map(() => (
        <div class="grenade-thread">
          <div />
          <div />
          <div />
        </div>
      ))
    }
    <div class="grenade-bot">
      <div></div>
      <div></div>
      <div></div>
    </div>
  </div>
</section>

<style>
  section {
    --base-darker: #1f2544;
    --base-dark: #474f7a;
    --base-light: #81689d;
    --base-lighter: #ca95b5;

    height: 31.07%;
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
  }

  .grenade-container {
    width: 67.92%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .grenade-container::before {
    content: "";
    position: absolute;
    inset: 0;
    width: 80%;
    left: 50%;
    translate: -50%;
    background: var(--base-darker);
  }

  .grenade-top {
    height: 12%;
    width: 100%;
    z-index: 1;
  }

  .grenade-top > div:nth-child(1) {
    height: 47.89%;
    background: var(--base-darker);
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0 100%);
  }

  .grenade-top > div:nth-child(2) {
    height: 28.74%;
    background: var(--base-dark);
  }

  .grenade-top > div:nth-child(3) {
    height: 23.37%;
    background: var(--base-darker);
    clip-path: polygon(0 0, 100% 0, 90% 100%, 10% 100%);
  }

  .grenade-thread {
    width: 100%;
    height: 9.06%;
    z-index: 1;
  }

  .grenade-thread > div:nth-child(2n + 1) {
    height: 30.96%;
    background: var(--base-darker);
  }

  .grenade-thread > div:nth-child(1) {
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0 100%);
  }

  .grenade-thread > div:nth-child(2) {
    height: 38.07%;
    background: var(--base-dark);
  }

  .grenade-thread > div:nth-child(3) {
    clip-path: polygon(0 0, 100% 0, 90% 100%, 10% 100%);
  }

  .grenade-bot {
    height: 15.45%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
  }

  .grenade-bot > div:nth-child(1) {
    height: 18.15%;
    width: 100%;
    background: var(--base-darker);
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0 100%);
  }

  .grenade-bot > div:nth-child(2) {
    height: 52.08%;
    width: 100%;
    background: var(--base-dark);
  }

  .grenade-bot > div:nth-child(3) {
    height: 29.76%;
    width: 100%;
    width: 105.56%;
    background: var(--base-dark);
  }
</style>
