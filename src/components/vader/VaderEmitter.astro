---
let topEmitterKnurls = new Array(19).fill("");
---

<section>
  <div class="top-emitter"></div>
  <div></div>
  <div>
    <div class="knurls">
      {topEmitterKnurls.map(() => <div class="knurl" />)}
    </div>
    <div></div>
  </div>
  <div></div>
  <div class="bot-emitter"></div>
</section>

<style>
  section {
    height: 15.52%;
    /* w: 43mm */
    width: 110.26%;
    position: relative;
    z-index: 5;
  }

  .top-emitter {
    width: 100%;
    height: 100%;
    translate: -6.98%;
    top: 0;
    background-color: darkslateblue;
    clip-path: polygon(0 0, 100% 68.89%, 100% 100%, 0% 100%);
    position: relative;
  }

  section > div:nth-child(2) {
    width: 6%;
    height: 31.11%;
    left: -12.3%;
    bottom: 0;
    position: absolute;
    background-color: darkslateblue;
  }

  section > div:nth-child(3) {
    width: 16.28%;
    height: 22.22%;
    left: -28%;
    bottom: 4.44%;
    position: absolute;
    display: flex;
  }

  .knurls {
    min-width: 42.86%;
    background-color: rgb(97, 90, 146);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .knurl {
    width: 100%;
    height: 5%;
  }

  .knurl:nth-child(2n) {
    width: 100%;
    height: 5%;
    background-color: black;
  }

  section > div:nth-child(3) > div:nth-child(2) {
    flex-grow: 1;
    background-color: rgb(97, 90, 146);
    display: flex;
    clip-path: polygon(
      66% 25%,
      33% 25%,
      0 0,
      0 100%,
      33% 75%,
      66% 75%,
      100% 100%,
      100% 0
    );
  }

  section > div:nth-child(4) {
    height: 51.11%;
    width: 9.3%;
    bottom: 2%;
    background-color: rgb(97, 90, 146);
    left: -14%;
    rotate: -6deg;
    border-radius: 9999px;
    position: absolute;
  }

  .bot-emitter {
    width: 111.63%;
    height: 55.56%;
    top: 98.5%;
    left: -12.5%;
    position: absolute;
    background-color: rgb(97, 90, 146);
    -webkit-mask-image: url(vader-emitter.svg);
    mask-image: url(vader-emitter.svg);
    mask-repeat: no-repeat;
    mask-size: cover;
  }
</style>
