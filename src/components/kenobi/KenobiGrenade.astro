---
let rows = ["", "", "", "", "", "", "", "", ""];
---

<section>
  <div class="grenade-container"></div>
  <div class="grenade-top"></div>
  {
    rows.map(() => (
      <div class="row">
        <div class="row-grid">
          <div></div>
          <div></div>
          <div></div>
        </div>
      </div>
    ))
  }
  <div class="grenade-bot"></div>
</section>

<style>
  section {
    width: 100%;
    height: 29.64%;
    background-color: coral;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .grenade-container {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 57.5%;
    height: 100%;
    background-color: rgb(70, 77, 148);
  }

  .grenade-top {
    height: 10.84%;
    width: 71.7%;
    background-color: rgb(70, 77, 148);
    clip-path: polygon(10% 0, 90% 0, 100% 75%, 90% 100%, 10% 100%, 0 75%);
  }

  .grenade-bot {
    height: 2.4%;
    width: 71.7%;
    background-color: rgb(70, 77, 148);
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0% 100%);
  }

  .row {
    display: flex;
    align-items: center;
    height: 9.64%;
    width: 71.7%;
    background-color: rgb(70, 76, 148);
    clip-path: polygon(
      10% 0%,
      90% 0%,
      100% 25%,
      100% 75%,
      90% 100%,
      10% 100%,
      0 75%,
      0 25%
    );
  }

  .row-grid {
    display: flex;
    justify-content: space-between;
    height: 50%;
    width: 100%;
    background-color: rgb(70, 76, 148);
  }

  .row-grid div {
    height: 100%;
    width: 28.95%;
    background-color: rgb(117, 141, 163);
  }
</style>
