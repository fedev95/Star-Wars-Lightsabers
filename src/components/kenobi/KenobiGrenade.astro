---
let rows = ["", "", "", "", "", "", "", "", ""];
---

<section>
  <div class="grenade-container"></div>
  <div class="grenade-top-1"></div>
  <div class="grenade-top-2"></div>
  {
    rows.map(() => (
      <div class="row">
        <div class="row-grid">
          <div class="col-1" />
          <div class="col-2" />
          <div class="col-3" />
        </div>
      </div>
    ))
  }
  <div class="grenade-bot"></div>
</section>

<style>
  section {
    --grenade-light: linear-gradient(
      90deg,
      rgba(18, 18, 18, 1) 0%,
      rgb(51, 50, 50) 5%,
      rgb(68, 66, 66) 14%,
      rgba(23, 22, 22, 1) 43%,
      rgba(15, 15, 15, 1) 100%
    );

    --grenade-dark: linear-gradient(
      90deg,
      rgba(14, 14, 14, 1) 0%,
      rgba(29, 29, 29, 1) 5%,
      rgba(23, 23, 23, 1) 14%,
      rgba(15, 15, 15, 1) 43%,
      rgba(15, 15, 15, 1) 100%
    );

    --shadow: linear-gradient(
      0deg,
      rgba(15, 15, 15, 1) 0%,
      rgba(15, 15, 15, 1) 49%,
      rgb(32, 29, 29) 50%,
      rgba(32, 29, 29, 1) 100%
    );
  }

  section {
    width: 100%;
    height: 29.64%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .grenade-container {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 57.5%;
    height: 100%;
    /* background-color: rgb(70, 77, 148); */
    background: var(--grenade-dark);
  }

  .grenade-top-1 {
    height: 8.43%;
    width: 71.7%;
    position: relative;
    background: var(--grenade-light);
    /* background-color: rgb(70, 77, 148); */
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0% 100%);
  }

  .grenade-top-1::before {
    position: absolute;
    content: "";
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(29, 29, 29, 0) 0%,
      rgba(124, 122, 122, 0) 72%,
      rgba(110, 104, 104, 0.3) 100%
    );
  }

  .grenade-top-2 {
    height: 2.41%;
    width: 71.7%;
    /* background-color: rgb(70, 77, 148); */
    background: var(--grenade-dark);
    clip-path: polygon(0 0, 100% 0, 90% 100%, 10% 100%);
  }

  .grenade-bot {
    height: 2.4%;
    width: 71.7%;
    /* background-color: rgb(70, 77, 148); */
    background: var(--grenade-dark);
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0% 100%);
  }

  .row {
    display: flex;
    align-items: center;
    height: 9.64%;
    width: 71.7%;
    /* background-color: rgb(70, 76, 148); */
    background: var(--grenade-dark);
    clip-path: polygon(
      10% 0%,
      90% 0%,
      100% 25%,
      100% 75%,
      90% 100%,
      10% 100%,
      0 75%,
      0 25%
    );
  }

  .row-grid {
    display: flex;
    justify-content: space-between;
    height: 50%;
    width: 100%;
  }

  .row-grid div {
    height: 100%;
    width: 28.95%;
    position: relative;
    /* background-color: rgb(117, 141, 163); */
  }

  .row-grid div::before {
    position: absolute;
    content: "";
    inset: 0;
    background: linear-gradient(
      0deg,
      rgba(29, 29, 29, 0) 0%,
      rgba(124, 122, 122, 0) 72%,
      rgba(110, 104, 104, 0.3) 100%
    );
  }

  .col-1 {
    background: linear-gradient(
      90deg,
      rgba(47, 45, 45, 1) 0%,
      rgba(55, 52, 52, 1) 23%,
      rgba(36, 36, 36, 1) 50%,
      rgb(49, 49, 49) 80%
    );
  }

  .col-2 {
    background: linear-gradient(
      90deg,
      rgb(49, 49, 49) 0%,
      rgba(36, 36, 36, 1) 10%,
      rgba(17, 17, 17, 1) 100%
    );
  }

  .col-3 {
    background: linear-gradient(
      90deg,
      rgb(22, 22, 22) 0%,
      rgba(14, 14, 14, 1) 100%
    );
  }

  section > div:nth-child(4) > div > div:nth-child(2) {
    width: 36.84%;
    clip-path: polygon(0 0, 100% 0, 90% 100%, 10% 100%);
  }

  section > div:nth-child(12) > div > div:nth-child(2) {
    width: 36.84%;
    clip-path: polygon(10% 0, 90% 0, 100% 100%, 0% 100%);
  }
</style>
